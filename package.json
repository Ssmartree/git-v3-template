{
  "name": "vue3-ts-template",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "//": "==================== 开发和构建命令 ====================",
    "//dev": "启动 Vite 开发服务器（热更新、快速刷新）",
    "dev": "vite",
    "//build": "并行执行类型检查和构建（npm-run-all2 的 run-p）",
    "build": "run-p type-check \"build-only {@}\" --",
    "//preview": "预览生产构建的结果（需要先执行 build）",
    "preview": "vite preview",
    "//build-only": "仅执行 Vite 构建，不做类型检查",
    "build-only": "vite build",

    "//1": "==================== 包管理和 Git Hooks ====================",
    "//preinstall": "强制使用 pnpm 安装依赖，禁止 npm/yarn（install 前自动执行）",
    "preinstall": "npx only-allow pnpm",
    "//prepare": "初始化 Git 仓库并安装 Husky 钩子（install 后自动执行）",
    "prepare": "git init && husky install",

    "//2": "==================== 代码检查命令 ====================",
    "//type-check": "TypeScript 类型检查（--build 增量构建，--force 强制重新检查）",
    "type-check": "vue-tsc --build --force",
    "//lint": "检查所有文件的 ESLint 规则（不自动修复）",
    "lint": "eslint .",
    "//lint:fix": "检查并自动修复 ESLint 问题",
    "lint:fix": "eslint . --fix",
    "//lint:stylelint": "检查并自动修复样式文件的 Stylelint 问题",
    "lint:stylelint": "stylelint  \"**/*.{css,scss,less,vue,html}\" --fix",
    "//lint:lint-staged": "对 Git 暂存区的文件执行 lint 检查（由 Husky pre-commit 钩子调用）",
    "lint:lint-staged": "lint-staged"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@iconify/json": "^2.2.253",
    "@unocss/reset": "^0.62.4",
    "@vueuse/core": "^11.1.0",
    "@vueuse/motion": "^2.2.5",
    "axios": "^1.13.2",
    "crypto-js": "^4.2.0",
    "echarts": "^5.5.1",
    "naive-ui": "^2.40.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^4.7.1",
    "qs": "^6.14.0",
    "spark-md5": "^3.0.2",
    "vue": "^3.4.29",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.3.3",
    "web-vitals": "^5.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.1",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.14.5",
    "@types/nprogress": "^0.2.3",
    "@types/qs": "^6.14.0",
    "@types/ws": "^8.5.14",
    "@unocss/eslint-plugin": "^0.62.4",
    "@unocss/preset-rem-to-px": "^0.62.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.10.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.78.0",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "~5.4.0",
    "unocss": "^0.62.4",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vue-tsc": "^2.0.21"
  }
}
