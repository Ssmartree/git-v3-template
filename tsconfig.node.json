{
  // 扩展: 基于 @tsconfig/node20/tsconfig.json，针对Node.js环境。
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext", // module 和 moduleResolution: 配置ES模块和模块解析策略。

    "moduleResolution": "Bundler",
    "types": ["node"], // types: 包含Node.js类型声明。

    "noEmit": true // 在编译后不生成任何js文件 // noEmit: 阻止生成输出文件，只进行类型检查。

  },
  "include": [// 包含: 主要包括配置文件和与Node相关的脚本。
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "configs/**/*"]
}
